    <!--action to send it to admin to be added later-->
    <div class="main">
      <div class="form_container">
        <div id="form">
          <form action="/login/basic" method="post" id="signin">
            <label for="Email">Email:</label>
            <input type="text" placeholder="Enter your Email" name="email" required />
            <label for="Password" >Password:</label>
            <input type="password" placeholder="Enter Password" name="password" required />
            <button id="submit">Log in</button>
            <a href="/forgotpass" class="notlogin">Forgot Password ?</a>
            <a href="/register/user" target="_parent" class="notlogin"
              >Register Yourself</a> 
            <!-- go to register page -->
          </form>
        </div>
      </div>
    </div>
