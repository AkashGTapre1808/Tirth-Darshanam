  <link rel="stylesheet" href="/main_home.css">
  <style>
    * {
      margin: 0px;
      padding: 0px;
      font-family: "Times New Roman", Times, serif;
      font-weight: 800;
    }

    .main {
      background-color:#d9e5d6;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0px 0px 0px 0px;
    }

    .form_container {
      /* border: 2px solid black; */
      border-radius: 20px;
      height: 350px;
      width: 400px;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 50px 0px 0px 0px;
      background-color: #eddea4;
      box-shadow: 0 4px 15px #11111a;
    }

    input {
      background-color: #d9e5d6;
      color: indigo;
      height:40px;
      width: 300px;
      border: 2px solid transparent;
      border-radius: 10px;
      padding: 10px;
      margin: 5px 0px 10px 0px;
      cursor: pointer;
    }
    #form {
      margin: 35px;
    }

    #submit {
      color: black;
      display: block;
      height: 40px;
      width: 100px;
      margin:5px 0px 15px 100px;
      border-radius: 10px;
      cursor: pointer;
      background-color: #ff9b42;
      border: none;
      box-shadow: 0 4px 15px #11111a;
    }

    .notlogin {
      display: inline;
      margin: 40px 30px 0px 5px;
      color: blue;
    }

    label{
      color: black;
    }
  </style>
